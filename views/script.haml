.text

  %h2= @command.sha

  - keys = (@command.keys || [])

  %h1.command
    %span.name= @command.name
    = "[#{keys.length}]"
    - keys.each do |key|
      %span.key= key.name
  
  %article
    %aside
      %ul
        %li
          %a(href="#command") Command
        %li
          %a(href="#description") Description
        %li
          %a(href="#example") Example
        %li
          %a(href="#source") Source 
        %li
          %a(href="#comments") Comments

      / %h2
      /   Other SMEMHASHES commands

      / %ul
      /   - (@related_commands||[]).each do |command|
      /     %li
      /       %a(href="/commands/#{command.to_param}")
      /         - if command == @command
      /           %strong= command.name
      /         - else
      /           = command.name

    %h3#description Description
    = @command.description

    %h3#example Example
    %pre.console
      = preserve do
        = @command.example

    %h2#source.source
      Source
      %small
        %a(href="/scripts/#{@command.sha}.lua") raw
    %pre
      %code
        = preserve do
          = @command.source

  #comments.text
    #disqus_thread

    :javascript
      var disqus_shortname = 'evalsha-com'; // required: replace example with your forum shortname

      var disqus_identifier = '/script/#{@command.sha}';
      /* * * DON'T EDIT BELOW THIS LINE * * */
      (function() {
          var dsq = document.createElement('script'); dsq.type = 'text/javascript'; dsq.async = true;
          dsq.src = 'http://' + disqus_shortname + '.disqus.com/embed.js';
          (document.getElementsByTagName('head')[0] || document.getElementsByTagName('body')[0]).appendChild(dsq);
      })();
        
